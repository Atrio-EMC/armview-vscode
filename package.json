{
	"name": "armview",
	"displayName": "ARM Template Viewer",
	"description": "Graphically display ARM templates in an interactive map view",
	"version": "0.0.8",
	"icon": "assets/img/icons/main.png",
	"publisher": "bencoleman",
	"author": {
		"name": "Ben Coleman",
		"email": "ben.coleman@microsoft.com"
	},
	"keywords": [
		"arm",
		"template",
		"preview",
		"visualizer",
		"map",
		"viewer",
		"azure"
	],
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Formatters",
		"Other",
		"Azure"
	],
	"activationEvents": [
		"onCommand:armView.start"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/benc-uk/armview-vscode"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "armView.start",
				"title": "Preview ARM file graphically",
				"category": "ARM Viewer",
				"icon": {
					"light": "./assets/img/icons/eye-light.svg",
					"dark": "./assets/img/icons/eye-dark.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "armView.start",
					"when": "editorLangId == json",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "armView.start",
					"when": "editorLangId == json",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "armView.start",
					"when": "editorLangId == json",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "armView.start",
				"key": "ctrl+alt+q",
				"mac": "cmd+alt+q",
				"when": "editorLangId == json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -w -p ./"
	},
	"dependencies": {
		"jsonlint": "^1.6.3",
		"strip-bom": "^3.0.0",
		"strip-json-comments": "^3.0.1",
		"vscode-extension-telemetry": "^0.1.2"
	},
	"devDependencies": {
		"@types/node": "^10.5.2",
		"@types/vscode": "^1.30.0",
		"jsonlint": "^1.6.3",
		"strip-bom": "^3.0.0",
		"ts-loader": "^6.1.2",
		"tslint": "^5.16.0",
		"typescript": "^3.5.1"
	}
}
