{
	"name": "armview",
	"displayName": "ARM Template Viewer",
	"description": "Graphically display ARM templates in an interactive map view",
	"version": "0.0.3",
	"icon": "assets/img/icons/main.png",
	"publisher": "bencoleman",
	"author": {
		"name": "Ben Coleman",
		"email": "ben.coleman@microsoft.com"
	},
	"keywords": [
		"arm",
		"template",
		"preview",
		"visualizer",
		"map",
		"viewer",
		"azure"
	],
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Formatters",
		"Other",
		"Azure"
	],
	"activationEvents": [
		"onCommand:armView.start"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/benc-uk/armview-vscode"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "armView.start",
				"title": "Preview ARM file graphically",
				"category": "ARM Viewer"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -w -p ./"
	},
	"dependencies": {
		"jsonlint": "^1.6.3",
		"strip-bom": "^3.0.0"
	},
	"devDependencies": {
		"@types/node": "^10.5.2",
		"tslint": "^5.16.0",
		"typescript": "^3.5.1",
		"@types/vscode": "^1.38.0",
		"jsonlint": "^1.6.3",
		"strip-bom": "^3.0.0"
	}
}
